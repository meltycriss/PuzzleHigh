<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:textSize="25sp"
        android:text="游戏设置"
        android:textColor="@color/puzzle_purple"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="难度"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <RadioGroup
            android:id="@+id/game_setting_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">
        </RadioGroup>
<!--        <Spinner
            android:id="@+id/game_setting_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    <ImageView
        android:id="@+id/game_setting_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/game_setting_tv_is_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传到服务器"
            android:textSize="20sp"
            android:layout_marginRight="5dp"/>

        <Switch
            android:id="@+id/game_setting_is_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/game_setting_start"
        android:background="@drawable/editor_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始游戏"
        android:textColor="@color/puzzle_purple"
        android:textSize="20sp" />

</LinearLayout>
